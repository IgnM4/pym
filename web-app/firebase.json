{
  "hosting": {
    "public": "public",
    "ignore": ["**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/data/**",
        "headers": [
          {"key": "Cache-Control", "value": "no-store"}
        ]
      },
      {
        "source": "/**",
        "headers": [
          {"key": "Cache-Control", "value": "public, max-age=31536000"}
        ]
      }
    ]
  }
}
